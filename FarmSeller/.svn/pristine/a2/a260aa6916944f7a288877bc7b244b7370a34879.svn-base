<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/title_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/gap"
        android:paddingRight="@dimen/gap">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/person"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="摊主：" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="林" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3px"
        android:background="@color/line" />

    <LinearLayout

        android:id="@+id/llTel"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/itemselector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/gap"
        android:paddingRight="@dimen/gap">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="电话：" />

        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:text="1364568" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3px"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/sendMsg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/itemselector"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/gap"
        android:paddingRight="@dimen/gap">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/massage"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:text="发送信息" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3px"
        android:background="@color/line" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/line"
        android:dividerHeight="0.3px"></ListView>
</LinearLayout>