<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/background">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true">
    </RelativeLayout>

    <include layout="@layout/title_view"/>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#486a9a"
        android:paddingTop="5dp">

        <Button
            android:id="@+id/btn_send"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/white"
            android:text="发送"/>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/gap"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/btn_send"
            android:layout_toRightOf="@+id/button1"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="说话"
            android:visibility="gone"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignLeft="@+id/et_content"
            android:layout_alignRight="@+id/btn_send"
            android:text="录音"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/orderArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_top"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/buyer"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:background="@color/cf9f9f9"
            android:orientation="vertical"
            android:paddingLeft="@dimen/gap"
            android:paddingRight="@dimen/gap"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""/>

                <TextView
                    android:id="@+id/selGoodsBuyer"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selectstyle"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="选商品"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgBuy"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="@dimen/gap"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="单价："
                            android:textSize="14sp"/>

                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"/>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="元/公斤"
                            android:textSize="14sp"/>


                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重量："
                            android:textSize="14sp"/>

                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="30dp"
                            android:text=""/>

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="公斤"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.3px"
                        android:layout_below="@id/txtDate"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:gravity="right"
                            android:textSize="14sp"
                            android:text="商品金额："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:minWidth="30dp"
                            android:textSize="14sp"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:gravity="center"
                            android:textSize="14sp"
                            android:text="元"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.3px"
                        android:layout_below="@id/txtDate"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="费率："
                            android:textSize="14sp"/>

                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/bFax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="30dp"
                            android:text=""/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="/公斤公里"
                            android:textSize="14sp"/>

                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="距离："
                            android:textSize="14sp"/>

                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/bDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="30dp"
                            android:text=""/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="元"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.3px"
                        android:layout_below="@id/txtDate"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:gravity="right|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运费："
                            android:textSize="14sp"/>

                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/bFreight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="30dp"
                            android:text=""/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="元"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.3px"
                        android:layout_below="@id/txtDate"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:gravity="right|center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="合计："
                            android:textSize="14sp"/>

                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="30dp"
                            android:text="0.00"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="元"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/toBuy"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/buttonstyle"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="购买"/>
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/seller"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@color/cf9f9f9"
            android:orientation="vertical"
            android:paddingLeft="@dimen/gap"
            android:paddingRight="@dimen/gap"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/stitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""/>

                <TextView
                    android:id="@+id/selGoodsSeller"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selectstyle"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="选商品"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSell"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="@dimen/gap"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="价格："
                            android:textSize="14sp"/>

                        <EditText
                            android:textSize="14sp"
                            android:id="@+id/editPrice"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/edit_background_1"
                            android:gravity="right"
                            android:inputType="numberDecimal"
                            android:paddingRight="5dp"
                            android:text="0.00"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="元/公斤"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.3px"
                        android:layout_below="@id/txtDate"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="重量："
                            android:textSize="14sp"/>

                        <EditText
                            android:textSize="14sp"
                            android:id="@+id/editWeight"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/edit_background_1"
                            android:gravity="right"
                            android:inputType="numberDecimal"
                            android:paddingRight="5dp"
                            android:text="0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="公斤"
                            android:textSize="14sp"/>
                    </LinearLayout>

                    <View
                        android:layout_margin="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="0.3px"
                        android:layout_below="@id/txtDate"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="距离："
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/sDistance"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:gravity="right"
                            android:paddingRight="5dp"
                            android:text="0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="元"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="费率："
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/sFax"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:gravity="right"
                            android:paddingRight="5dp"
                            android:text="0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="/公斤公里"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:visibility="gone"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="运费："
                            android:textSize="16sp"/>

                        <EditText
                            android:id="@+id/sFreight"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/edit_background_1"
                            android:gravity="right"
                            android:inputType="numberDecimal"
                            android:paddingRight="5dp"
                            android:text="0"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="元"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="合计："
                            android:textSize="14sp"/>

                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/stotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minWidth="30dp"
                            android:text="0.00"/>

                        <TextView
                            android:textSize="14sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/price"
                            android:text="元"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true" >

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/buttonstyle"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="生成订单"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.3px"
        android:layout_below="@id/orderArea"
        android:background="@color/line"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/rl_bottom"
        android:layout_below="@id/line"
        android:layout_centerHorizontal="true"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="3dp"
        android:listSelector="#00000000"
        android:scrollbars="none"/>

</RelativeLayout>