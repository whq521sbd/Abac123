<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/aotuo_hight_50"
        android:background="@color/cf9f9f9" >

        <include layout="@layout/back_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择支付配送方式"
            android:textColor="@color/title_background"
            android:textSize="@dimen/text_title_size" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2px"
        android:background="@color/line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="15dp"
        android:text="支付方式"
        android:textColor="@color/c333333"
        android:textSize="@dimen/font18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/online_pay"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:background="@drawable/cannel_delete_background"
            android:gravity="center"
            android:text="在线支付"
            android:textColor="@color/c333333"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/cod"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cannel_delete_background"
            android:gravity="center"
            android:text="货到付款"
            android:textColor="@color/c333333"
            android:textSize="@dimen/font14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2px"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:background="@color/line" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="@dimen/left_margin"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        android:text="配送方式"
        android:textColor="@color/c333333"
        android:textSize="@dimen/font18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/left_margin"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/delivery"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:background="@drawable/cannel_delete_background"
            android:gravity="center"
            android:text="快递"
            android:textColor="@color/c333333"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/other"
            android:layout_width="95dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/cannel_delete_background"
            android:gravity="center"
            android:text="其他"
            android:textColor="@color/c333333"
            android:textSize="@dimen/font14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2px"
        android:layout_marginTop="15dp"
        android:background="@color/line" />

    <ImageView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/confirm" />

</LinearLayout>