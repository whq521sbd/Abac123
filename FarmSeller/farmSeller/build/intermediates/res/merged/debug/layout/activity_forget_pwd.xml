<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/title_bar_color"
    android:orientation="vertical" >

    <include layout="@layout/title_view"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.2px"
        android:background="@color/line" />
    <EditText
        android:id="@+id/forget_old_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_background"
        android:gravity="center_vertical"
        android:hint="请输入旧密码"
        android:paddingLeft="5dp"
        android:password="true"
        android:maxLength="18"
        android:textColorHint="@color/my_first_color" />

    <EditText
        android:id="@+id/forget_pwd_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="@dimen/gap"
        android:layout_marginRight="@dimen/gap"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_background"
        android:gravity="center_vertical"
        android:hint="请输入新密码"
        android:paddingLeft="5dp"
        android:password="true"
        android:maxLength="18"
        android:textColorHint="@color/my_first_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="@dimen/gap"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/forget_pwd_sure_pwd"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/gap"
            android:layout_weight="1.7"
            android:background="@drawable/search_background"
            android:gravity="center_vertical"
            android:hint="请确认新密码"
            android:paddingLeft="5dp"
            android:password="true"
            android:maxLength="18"
            android:textColorHint="@color/my_first_color" />
    </LinearLayout>
    <TextView 
        android:id="@+id/forget_pwd_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="@dimen/gap"
        android:text="修改密码"
        android:textColor="@color/black"
        android:gravity="center"
        android:background="@drawable/buttonstyle"/>
</LinearLayout>