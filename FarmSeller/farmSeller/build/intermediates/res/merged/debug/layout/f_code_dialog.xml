<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/exit_dialog_bg"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/aotuo_hight_10"
        android:text="请输入F码"
        android:textColor="@color/my_classify_v"
        android:textSize="@dimen/aotuo_textsize_16"/>

    <RelativeLayout
        android:layout_width="260dip"
        android:layout_height="40dip"
        android:layout_marginTop="10dip" >

        <EditText
            android:id="@+id/f_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/aotuo_hight_50"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/aotuo_hight_10"
            android:layout_marginRight="@dimen/aotuo_hight_10"
            android:background="@drawable/cannel_delete_background"
            android:text=""
            android:textCursorDrawable="@null"
            android:paddingLeft="5dp"
            android:textColor="#6e6e6e"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:layout_width="260dip"
        android:layout_height="0.5dip"
        android:layout_marginTop="30dip"
        android:background="#dedfe0" />

    <LinearLayout
        android:layout_width="260dip"
        android:layout_height="80dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/cannel_f_code"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/cannel_delete_background"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/main_color"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sure_f_code"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="8dip"
                android:background="@drawable/sure_clear_mylook"
                android:gravity="center"
                android:text="确定"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>