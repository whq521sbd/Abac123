<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="#f4f4f4" >

        <EditText
            android:id="@+id/search_huodong"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dip"
            android:layout_marginRight="15dip"
            android:background="@drawable/edit_shopping_car_button_1"
            android:gravity="center_vertical"
            android:hint="请输入关键词"
            android:textColor="#000"
            android:paddingLeft="5dip"
            android:paddingRight="4dip" >

            <requestFocus />
        </EditText>

        <View
            android:layout_width="0.5dip"
            android:layout_height="40dip"
            android:layout_alignRight="@+id/search_huodong"
            android:layout_alignTop="@+id/search_huodong"
            android:layout_marginRight="40dip"
            android:background="#dedfe0" />

        <TextView
            android:id="@+id/search"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignRight="@+id/search_huodong"
            android:layout_centerVertical="true"
            android:layout_marginRight="7.5dip"
            android:background="@drawable/seacrh_icon" />

    </RelativeLayout>
  
</RelativeLayout>
